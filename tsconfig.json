{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "lib": ["DOM", "ES2020", "WebWorker"],
    "outDir": "./dist",
    "allowJs": true
  },
  "include": ["**/*.ts"]
}
